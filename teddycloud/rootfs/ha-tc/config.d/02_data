#!/command/with-contenv bashio
# shellcheck shell=bash

CONFIG_FILE=/teddycloud/config/config.overlay.ini

mkdir -p  /data/teddycloud/content
mkdir -p  /data/teddycloud/library
mkdir -p  /data/teddycloud/firmware
mkdir -p  /data/teddycloud/cache

echo core.contentdir=/data/teddycloud/content >> $CONFIG_FILE
echo core.librarydir=/data/teddycloud/library >> $CONFIG_FILE
echo core.firmwaredir=/data/teddycloud/firmware >> $CONFIG_FILE
echo core.cachedir=/data/teddycloud/cache >> $CONFIG_FILE
